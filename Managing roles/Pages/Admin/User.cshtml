@page "{id}"
@model Managing_roles.Pages.Admin.UserModel
@{
    ViewData["Title"] = "Изменение ролей у пользователя";
}
<h1>Изменение ролей у пользователя</h1>

<form asp-page="User">
    <div class="form-group">
        <input type="hidden" asp-for="UserId"/>
        @for (int i = 0; i < Model.AllRoles.Count; i++)
        {
            <input type="checkbox" asp-for="RolesCheck[i]" /> @Model.AllRoles[i].Name <br />

            <input type="hidden" asp-for="AllRoles[i].Id" />
        }

        @for(int i = 0; i < Model.RoleUsers.Count; i++)
        {
            <input type="hidden" asp-for="RoleUsers[i].RoleId" />
            <input type="hidden" asp-for="RoleUsers[i].UserId" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

